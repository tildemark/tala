# TALA - Tax and Ledger Assistant
# Philippine Computerized Accounting System

## Environment Configuration

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/tala_dev"
DATABASE_POOL_SIZE=10

# JWT & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRY="24h"
JWT_REFRESH_EXPIRY="7d"
ENCRYPTION_KEY="your-aes-256-encryption-key-32-chars"

# API Configuration
API_PORT=3001
API_NODE_ENV="development"
API_CORS_ORIGIN="http://localhost:3000"

# Frontend Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
NEXT_PUBLIC_APP_NAME="TALA"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Email & Notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@tala.ph"

# AWS S3 (for file uploads)
AWS_REGION="ap-southeast-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET="tala-documents"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# BIR Configuration
BIR_API_ENDPOINT="https://bir-api.example.com"
BIR_API_KEY=""

# Feature Flags
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_AUDIT_CHAIN=true
FEATURE_DATA_MASKING=true
FEATURE_BIR_EXPORT=true

# Analytics
ANALYTICS_ENABLED=false
SENTRY_DSN=""
