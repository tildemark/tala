# TALA Docker Environment Configuration
# Copy this file to .env for local development with Docker

# ======================
# Database Configuration
# ======================
DB_NAME=tala_db
DB_USER=tala_user
DB_PASSWORD=tala_password_change_in_production
DB_PORT=5432

# PostgreSQL connection string (used by Prisma)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@tala-db:5432/${DB_NAME}?schema=public

# ======================
# Application Settings
# ======================
NODE_ENV=development

# ======================
# API Configuration
# ======================
API_PORT=3001
API_CORS_ORIGIN=http://localhost:3000

# JWT Settings
JWT_SECRET=your-very-long-random-jwt-secret-key-change-in-production-minimum-32-characters
JWT_EXPIRY=24h

# Encryption Settings (must be 32 characters)
ENCRYPTION_KEY=use-a-32-character-key-minimum-!!!

# ======================
# Web Configuration
# ======================
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_TELEMETRY_DISABLED=1

# ======================
# pgAdmin Configuration
# ======================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@tala.local
PGADMIN_PASSWORD=admin

# ======================
# Optional: SMTP Configuration
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@tala.local

# ======================
# Optional: AWS Configuration
# ======================
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=tala-documents

# ======================
# Optional: BIR Integration
# ======================
BIR_API_ENDPOINT=https://bir.gov.ph/api
BIR_API_KEY=your-bir-api-key
BIR_TIN=000-000-000-000

# ======================
# Optional: Monitoring
# ======================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
